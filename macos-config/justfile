# macOS Home Manager Commands

# Default recipe (shows help)
default:
    @just --list

# Apply Home Manager configuration for macOS
switch:
    home-manager switch --flake .#jacob@macos

# Update flake inputs
update:
    nix flake update

# Update and rebuild
update-switch: update switch

# Check configuration
check:
    nix flake check

# Format Nix files
fmt:
    nix fmt

# Clean old generations
clean:
    nix-collect-garbage -d --delete-older-than 7d

# Show configuration info
info:
    @echo "üçé macOS Home Manager Configuration"
    @echo ""
    @echo "üìã Available configuration:"
    @echo "  jacob@macos  - macOS setup"
    @echo ""
    @echo "üîß Quick commands:"
    @echo "  just switch       - Apply macOS config"
    @echo "  just update       - Update inputs"
    @echo "  just clean        - Clean old generations"