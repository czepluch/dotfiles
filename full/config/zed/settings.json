{
  "theme": "One Dark",
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "ui_font_family": "Inter",

  "preferred_line_length": 100,
  "soft_wrap": "preferred_line_length",
  "show_wrap_guides": true,
  "wrap_guides": [80, 100],

  "tab_size": 2,
  "hard_tabs": false,
  "show_whitespaces": "selection",
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,

  "vim_mode": false,
  "relative_line_numbers": false,
  "show_line_numbers": true,
  "show_gutter": true,
  "gutter": {
    "line_numbers": true,
    "code_actions": true,
    "runnables": true,
    "folds": true
  },

  "cursor_blink": true,
  "highlight_corresponding_brackets": true,
  "show_completion_documentation": true,
  "use_autoclose": true,

  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": true
  },

  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },

  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true
  },

  "outline_panel": {
    "button": true,
    "default_width": 240,
    "dock": "right"
  },

  "collaboration_panel": {
    "button": false,
    "dock": "left"
  },

  "chat_panel": {
    "button": true,
    "dock": "right",
    "default_width": 400
  },

  "notification_panel": {
    "button": true,
    "dock": "right",
    "default_width": 380
  },

  "terminal": {
    "alternate_scroll": "off",
    "blinking": "terminal_controlled",
    "copy_on_select": false,
    "dock": "bottom",
    "default_height": 320,
    "default_width": 640,
    "env": {
      "TERM": "xterm-256color"
    },
    "font_family": "JetBrainsMono Nerd Font",
    "font_size": 14,
    "line_height": "comfortable",
    "option_as_meta": false,
    "button": true,
    "shell": "system",
    "toolbar": {
      "title": true
    },
    "working_directory": "current_project_directory"
  },

  "assistant": {
    "enabled": true,
    "version": "2",
    "provider": {
      "name": "openai",
      "default_model": "gpt-4o"
    },
    "dock": "right",
    "default_width": 400,
    "button": true
  },

  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/node_modules",
    "**/target",
    "**/build",
    "**/dist",
    "**/.vscode",
    "**/.idea",
    "**/*.swp",
    "**/*.swo",
    "**/result",
    "**/result-*"
  ],

  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "delay_ms": 600
    }
  },

  "languages": {
    "TypeScript": {
      "code_actions_on_format": {
        "source.addMissingImports.ts": true,
        "source.fixAll.ts": true,
        "source.organizeImports.ts": true,
        "source.removeUnusedImports.ts": true
      },
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.addMissingImports.ts": true,
        "source.fixAll.ts": true,
        "source.organizeImports.ts": true,
        "source.removeUnusedImports.ts": true
      },
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "JSON": {
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "Rust": {
      "format_on_save": "on",
      "formatter": "language_server"
    },
    "Python": {
      "format_on_save": "on",
      "formatter": "ruff"
    },
    "Nix": {
      "format_on_save": "on",
      "formatter": "language_server"
    },
    "Markdown": {
      "format_on_save": "on",
      "formatter": "prettier",
      "soft_wrap": "preferred_line_length"
    }
  },

  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        },
        "diagnostics": {
          "enable": true
        },
        "hover": {
          "actions": {
            "enable": true
          }
        },
        "inlayHints": {
          "enable": true,
          "showParameterNames": true,
          "parameterHintsPrefix": "← ",
          "otherHintsPrefix": "» "
        }
      }
    },
    "nixd": {
      "initialization_options": {
        "formatting": {
          "command": "nixpkgs-fmt"
        }
      }
    }
  },

  "auto_update": true,
  "hour_format": "hour24",
  "auto_install_extensions": {
    "html": true,
    "nix": true
  },

  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": true
  },

  "calls": {
    "mute_on_join": false,
    "share_on_join": false
  },

  "copilot": {
    "disabled_globs": [
      ".env"
    ]
  }
}
