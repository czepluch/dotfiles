# Ghostty Terminal Configuration
# Theme: Aether (Tokyo Night)

# Font configuration
font-family = "JetBrains Mono"
font-size = 13

# Window configuration
window-padding-x = 8
window-padding-y = 8
window-decoration = true
window-theme = dark

# Background opacity (0.0 - 1.0)
background-opacity = 0.95

# Aether theme integration
# Note: Ghostty doesn't support config includes, so we load the palette directly
import = ~/.config/aether/theme/ghostty.conf

# Cursor
cursor-style = block
# Shell integration
shell-integration-features = cursor,sudo,title

# Mouse
mouse-hide-while-typing = true

# Clipboard
clipboard-read = allow
clipboard-write = allow
copy-on-select = clipboard

# Override default: paste from clipboard instead of selection
# This allows SUPER+V (which sends shift+insert) to paste from clipboard
keybind = shift+insert=paste_from_clipboard

# macOS specific
macos-titlebar-style = transparent
macos-option-as-alt = true
