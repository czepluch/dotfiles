[filetype]
rules = [
  # Images
  { mime = "image/*", fg = "#40ddc3" },
  
  # Videos
  { mime = "video/*", fg = "#3be381" },
  { mime = "audio/*", fg = "#3be381" },
  
  # Archives
  { mime = "application/*zip", fg = "#ff6b6b" },
  { mime = "application/*tar", fg = "#ff6b6b" },
  { mime = "application/*compressed", fg = "#ff6b6b" },
  
  # Documents
  { mime = "application/pdf", fg = "#85ffb8" },
  { name = "*.md", fg = "#25d0b4" },
  
  # Code
  { name = "*.{js,ts,jsx,tsx}", fg = "#40ddc3" },
  { name = "*.{py,pyc}", fg = "#3be381" },
  { name = "*.{rs,toml}", fg = "#ff6b6b" },
  { name = "*.{sol,gleam}", fg = "#25d0b4" },
  
  # Directories
  { name = "*/", fg = "#3be381" },
  
  # Fallback
  { name = "*", fg = "#8ea4a0" },
]

